       placeholder="<?php echo $placeholder ?>" <?php echo htmlspecialchars($this->getField()->getCustomAttributes()) ?>
/>
<script type="text/javascript">
    require(["jquery","VladimirPopov_WebForms/js/colpick"], function ($) {
        $(document).ready(function (e) {
            var el = $("#<?php echo $this->getFieldId() ?>");
            el.css("background-color","#<?php echo htmlspecialchars($this->getFieldValue()); ?>");
            el.colpick({
                layout:"hex",
                submit:0,
                color: "#<?php echo htmlspecialchars($this->getFieldValue()); ?>",
                onChange:function(hsb,hex,rgb,el,bySetColor) {
                    $(el).css("background-color","#"+hex);
                    if(!bySetColor) $(el).val(hex);
                }
            }).keyup(function(){
                $(this).colpickSetColor(this.value);
            });
        });
    });
</script>
